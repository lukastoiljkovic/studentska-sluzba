<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.raflab.studsluzbadesktopclient.controllers.IspitRezultatiController"
      spacing="10" style="-fx-padding: 15;">

    <Label fx:id="ispitLabel" text="Rezultati ispita"
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <TableView fx:id="rezultatiTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="indeksCol" text="Indeks" prefWidth="100"/>
            <TableColumn fx:id="imeCol" text="Ime" prefWidth="150"/>
            <TableColumn fx:id="prezimeCol" text="Prezime" prefWidth="150"/>
            <TableColumn fx:id="predispitniCol" text="Predispitni" prefWidth="100"/>
            <TableColumn fx:id="ispitniCol" text="Ispitni" prefWidth="100"/>
            <TableColumn fx:id="ukupnoCol" text="Ukupno" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label fx:id="prosekLabel" text="Prosečna ocena: -"/>
        <Label fx:id="polozioLabel" text="Položilo: -"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="stampajBtn" text="Štampaj zapisnik" onAction="#handleStampaj"/>
        <Button fx:id="refreshBtn" text="Osveži" onAction="#handleRefresh"/>
    </HBox>

</VBox>