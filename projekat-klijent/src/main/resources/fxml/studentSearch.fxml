<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.raflab.studsluzbadesktopclient.controllers.StudentSearchController">

    <top>
        <VBox spacing="12" style="-fx-padding: 20; -fx-background-color: white;">
            <Label text="Pretraga studenata"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <Separator/>

            <!-- FAST SEARCH (OSTAJE) -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Brza pretraga (indeks):" style="-fx-font-weight: bold;"/>
                <TextField fx:id="fastSearchTf" promptText="Broj indeksa" prefWidth="200"/>
                <Button text="Pronađi" onAction="#handleFastSearch" styleClass="primary-button"/>
            </HBox>

            <Separator/>

            <!-- IME / PREZIME -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Ime:"/>
                <TextField fx:id="imeTf" prefWidth="200"/>
                <Label text="Prezime:"/>
                <TextField fx:id="prezimeTf" prefWidth="200"/>
                <Button text="Pretraži" onAction="#handleSearchByImePrezime" styleClass="primary-button"/>
            </HBox>

            <!-- SREDNJA SKOLA -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Srednja škola:"/>
                <ComboBox fx:id="srednjaSkolaCb" prefWidth="300"/>
                <Button text="Pretraži" onAction="#handleSearchBySrednjaSkola" styleClass="primary-button"/>
            </HBox>

            <!-- DUGMAD -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Očisti" onAction="#handleClear"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Novi Student" onAction="#handleNewStudent" styleClass="success-button"/>
            </HBox>

            <!-- STATUS -->
            <Label fx:id="statusLabel" style="-fx-text-fill: #666;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <TableView fx:id="resultTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="imeCol" text="Ime" prefWidth="150"/>
                    <TableColumn fx:id="prezimeCol" text="Prezime" prefWidth="150"/>
                    <TableColumn fx:id="indeksCol" text="Indeks" prefWidth="150"/>
                    <TableColumn fx:id="godinaCol" text="Godina" prefWidth="120"/>
                    <TableColumn fx:id="aktivanCol" text="Aktivan" prefWidth="80"/>
                </columns>
                <placeholder>
                    <Label text="Nema rezultata. Pokrenite pretragu."
                           style="-fx-text-fill: #999;"/>
                </placeholder>
            </TableView>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Otvori Profil"
                        onAction="#handleOpenProfile"
                        styleClass="primary-button"/>
                <Label text="Dupli klik na red za otvaranje profila"
                       style="-fx-text-fill: #666; -fx-font-style: italic;"/>
            </HBox>

            <Pagination fx:id="pagination"
                        pageCount="1"
                        maxPageIndicatorCount="10"/>
        </VBox>
    </center>

</BorderPane>