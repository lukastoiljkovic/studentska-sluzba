<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.raflab.studsluzbadesktopclient.controllers.IspitniRokUpravljanjeController"
      spacing="10" style="-fx-padding: 15;">

    <Label text="Ispitni rokovi" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="noviRokBtn" text="Novi ispitni rok" onAction="#handleNoviRok"/>
        <Button fx:id="obrisiBtn" text="Obriši" onAction="#handleObrisi"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="refreshBtn" text="Osveži" onAction="#handleRefresh"/>
    </HBox>

    <TableView fx:id="rokTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nazivCol" text="Naziv" prefWidth="200"/>
            <TableColumn fx:id="pocetakCol" text="Početak" prefWidth="150"/>
            <TableColumn fx:id="zavrsetakCol" text="Završetak" prefWidth="150"/>
            <TableColumn fx:id="skolskaGodinaCol" text="Školska godina" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>