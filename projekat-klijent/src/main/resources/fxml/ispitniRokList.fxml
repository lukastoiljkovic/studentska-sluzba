<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.raflab.studsluzbadesktopclient.controllers.IspitniRokListController"
      spacing="10" style="-fx-padding: 15;">

    <Label text="Ispiti" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="noviIspitBtn" text="Novi ispit" onAction="#handleNoviIspit"/>
        <Button fx:id="prikaziPrijavljeneBtn" text="Prijavljeni studenti" onAction="#handlePrikaziPrijavljene"/>
        <Button fx:id="prikaziRezultateBtn" text="Rezultati ispita" onAction="#handlePrikaziRezultate"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="refreshBtn" text="Osveži" onAction="#handleRefresh"/>
    </HBox>

    <TableView fx:id="ispitTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="predmetCol" text="Predmet" prefWidth="250"/>
            <TableColumn fx:id="rokCol" text="Ispitni rok" prefWidth="150"/>
            <TableColumn fx:id="datumCol" text="Datum i vreme" prefWidth="150"/>
            <TableColumn fx:id="nastavnikCol" text="Nastavnik" prefWidth="180"/>
            <TableColumn fx:id="zakljucenCol" text="Zaključen" prefWidth="80"/>
        </columns>
    </TableView>

</VBox>