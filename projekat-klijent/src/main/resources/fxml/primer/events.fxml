<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<BorderPane fx:id="eventsPane" prefHeight="600" prefWidth="800" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.raflab.studsluzbadesktopclient.controllers.primer.EventsController">
    <top>
        <fx:include source="../menuBar.fxml"/>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="5">
            <Button text="Mouse Event"
                    onMouseClicked="#mouseKlik"
                    onMouseEntered="#mouseUsao"
                    onMouseExited="#mouseIzasao"/>

            <StackPane prefWidth="50" prefHeight="50"
                       onMouseClicked="#klikNaPane"
                       onMouseMoved="#mousePomeren"
                       style="-fx-background-color: lightblue;">
                <Label text="Pane"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            </StackPane>

            <Pane prefWidth="100" prefHeight="150"
                  style="-fx-background-color: lightgray;">
                <Circle fx:id="krug"
                        radius="20"
                        centerX="100"
                        centerY="100"
                        fill="dodgerblue"
                        onMousePressed="#mousePressed"
                        onMouseDragged="#mouseDragged"/>
            </Pane>

            <Button text="Hover efekat"
                    onMouseEntered="#hoverOn"
                    onMouseExited="#hoverOff"/>

            <Pane fx:id="platno" prefWidth="100" prefHeight="150"
                  onMousePressed="#pocetakLinije"
                  onMouseDragged="#nastaviLiniju"
                       style="-fx-background-color: lightgray;">
                <Label text="PLATNO"
                       style="-fx-font-size: 18px; -fx-font-color:gray;" />
            </Pane>

            <StackPane fx:id="pane" style="-fx-background-color: lightblue;" prefWidth="300" prefHeight="100"
                  onMouseClicked="#prikaziMenu">
                <Label text="Options pane"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            </StackPane>

            <Rectangle width="100" height="60" fill="darkblue"
                       onMouseEntered="#kursorNaRect"
                       onMouseExited="#kursorVanRect"/>

        </VBox>
    </center>
</BorderPane>