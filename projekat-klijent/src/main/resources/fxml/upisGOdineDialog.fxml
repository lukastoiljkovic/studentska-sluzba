<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.raflab.studsluzbadesktopclient.controllers.UpisGodineDialogController"
      spacing="15" style="-fx-padding: 20;">

    <Label text="Upis Godine" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Student:" style="-fx-min-width: 100;"/>
        <Label fx:id="studentLabel" style="-fx-font-weight: bold;"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Indeks:" style="-fx-min-width: 100;"/>
        <Label fx:id="indeksLabel" style="-fx-font-weight: bold;"/>
    </HBox>

    <Separator/>

    <GridPane hgap="10" vgap="10">
        <Label text="Školska godina:*" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="skolskaGodinaCb" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Godina studija:*" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="godinaStudijaCb" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Način finansiranja:*" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="nacinFinansiranjaCb" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Iznos (EUR):" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="iznosTf" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Napomena:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextArea fx:id="napomenaTa" prefWidth="200" prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="saveBtn" text="Sačuvaj" onAction="#handleSave" styleClass="success-button"/>
        <Button fx:id="cancelBtn" text="Odustani" onAction="#handleCancel"/>
    </HBox>

</VBox>