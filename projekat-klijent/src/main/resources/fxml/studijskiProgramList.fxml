<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.raflab.studsluzbadesktopclient.controllers.StudijskiProgramListController"
      spacing="10" style="-fx-padding: 15;">

    <Label text="Studijski programi" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="predmetiBtn" text="Prikaži predmete" onAction="#handlePrikaziPredmete"/>
        <Button fx:id="dodajPredmetBtn" text="Dodaj predmet" onAction="#handleDodajPredmet"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="noviProgramBtn" text="Novi program" onAction="#handleNoviProgram"/>
        <Button fx:id="refreshBtn" text="Osveži" onAction="#handleRefresh"/>
    </HBox>

    <TableView fx:id="programTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="oznakaCol" text="Oznaka" prefWidth="80"/>
            <TableColumn fx:id="nazivCol" text="Naziv" prefWidth="300"/>
            <TableColumn fx:id="godinaCol" text="Godina akreditacije" prefWidth="120"/>
            <TableColumn fx:id="zvanjeCol" text="Zvanje" prefWidth="150"/>
            <TableColumn fx:id="espbCol" text="ESPB" prefWidth="80"/>
        </columns>
    </TableView>

</VBox>