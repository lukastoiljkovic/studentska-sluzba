<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.raflab.studsluzbadesktopclient.controllers.StudentProfileController"
            prefHeight="700.0" prefWidth="1000.0">

    <!-- HEADER -->
    <top>
        <VBox spacing="10" styleClass="card">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

            <HBox spacing="20" alignment="CENTER_LEFT">
                <Label text="IME:" style="-fx-font-weight: bold;"/>
                <Label fx:id="imeLabel" text="-" style="-fx-font-size: 16px;"/>

                <Label text="PREZIME:" style="-fx-font-weight: bold;"/>
                <Label fx:id="prezimeLabel" text="-" style="-fx-font-size: 16px;"/>

                <Label text="INDEKS:" style="-fx-font-weight: bold;"/>
                <Label fx:id="indeksLabel" text="-" style="-fx-font-size: 16px;"/>
            </HBox>

            <HBox spacing="20" alignment="CENTER_LEFT">
                <Label text="JMBG:" style="-fx-font-weight: bold;"/>
                <Label fx:id="jmbgLabel" text="-"/>

                <Label text="Email:" style="-fx-font-weight: bold;"/>
                <Label fx:id="emailLabel" text="-"/>

                <Label text="Program:" style="-fx-font-weight: bold;"/>
                <Label fx:id="studProgramLabel" text="-"/>
            </HBox>

            <HBox spacing="20" alignment="CENTER_LEFT">
                <Label text="ESPB:" style="-fx-font-weight: bold;"/>
                <Label fx:id="espbLabel" text="0"/>

                <Label text="Prosek:" style="-fx-font-weight: bold;"/>
                <Label fx:id="prosekLabel" text="0.00"/>

                <Label fx:id="statusLabel" text="Status" style="-fx-text-fill: #666;"/>
            </HBox>
        </VBox>
    </top>

    <!-- MAIN CONTENT - TAB PANE -->
    <center>
        <TabPane fx:id="tabPane" id="StudentProfileTabPane" tabClosingPolicy="UNAVAILABLE">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

            <!-- TAB: LIČNI PODACI -->
            <Tab fx:id="licniPodaciTab" text="Lični podaci">
                <ScrollPane fitToWidth="true">
                    <VBox spacing="15">
                        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

                        <Label text="OSNOVNI PODACI" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                        <Separator/>

                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints minWidth="120" prefWidth="120"/>
                                <ColumnConstraints minWidth="200" prefWidth="250" hgrow="SOMETIMES"/>
                                <ColumnConstraints minWidth="120" prefWidth="120"/>
                                <ColumnConstraints minWidth="200" prefWidth="250" hgrow="SOMETIMES"/>
                            </columnConstraints>

                            <Label text="Ime:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="imeTf" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Prezime:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                            <TextField fx:id="prezimeTf" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                            <Label text="Srednje ime:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="srednjeImeTf" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="JMBG:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                            <TextField fx:id="jmbgTf" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                            <Label text="Datum rođenja:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <DatePicker fx:id="datumRodjenjaDp" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                            <Label text="Mesto rođenja:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                            <TextField fx:id="mestoRodjenjaTf" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                            <Label text="Država rođenja:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <TextField fx:id="drzavaRodjenjaTf" editable="false" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                        </GridPane>

                        <Label text="KONTAKT" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                        <Separator/>

                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints minWidth="120" prefWidth="120"/>
                                <ColumnConstraints minWidth="200" prefWidth="250" hgrow="SOMETIMES"/>
                                <ColumnConstraints minWidth="120" prefWidth="120"/>
                                <ColumnConstraints minWidth="200" prefWidth="250" hgrow="SOMETIMES"/>
                            </columnConstraints>

                            <Label text="Adresa:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="adresaTf" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Telefon:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                            <TextField fx:id="telefonTf" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                            <Label text="Email fakultetski:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="emailFakultetskiTf" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Email privatni:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                            <TextField fx:id="emailPrivatniTf" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                        </GridPane>

                        <Label text="OBRAZOVANJE" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                        <Separator/>

                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints minWidth="120" prefWidth="120"/>
                                <ColumnConstraints minWidth="200" prefWidth="250" hgrow="SOMETIMES"/>
                            </columnConstraints>

                            <Label text="Srednja škola:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="srednjaSkolaTf" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        </GridPane>
                    </VBox>
                </ScrollPane>
            </Tab>

            <!-- TAB: POLOŽENI ISPITI -->
            <Tab fx:id="polozeniTab" text="Položeni ispiti">
                <VBox spacing="10">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                    <TableView fx:id="polozeniTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="polPredmetCol" text="Predmet" prefWidth="300"/>
                            <TableColumn fx:id="polOcenaCol" text="Ocena" prefWidth="80"/>
                            <TableColumn fx:id="polEspbCol" text="ESPB" prefWidth="80"/>
                            <TableColumn fx:id="polDatumCol" text="Datum" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <Pagination fx:id="polozeniPagination" pageCount="1"/>
                </VBox>
            </Tab>

            <!-- TAB: NEPOLOŽENI ISPITI -->
            <Tab fx:id="nepolozeniTab" text="Nepoloženi ispiti">
                <VBox spacing="10">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                    <TableView fx:id="nepolozeniTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="nepolPredmetCol" text="Predmet" prefWidth="300"/>
                            <TableColumn fx:id="nepolEspbCol" text="ESPB" prefWidth="80"/>
                            <TableColumn fx:id="nepolIzlasciCol" text="Broj izlazaka" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <Pagination fx:id="nepolozeniPagination" pageCount="1"/>
                </VBox>
            </Tab>

            <!-- TAB: UPISANE GODINE -->
            <Tab fx:id="upisaneGodineTab" text="Upisane godine">
                <VBox spacing="10">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                    <TableView fx:id="upisaneGodineTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="ugSkolskaGodinaCol" text="Školska godina" prefWidth="150"/>
                            <TableColumn fx:id="ugGodinaStudijaCol" text="Godina studija" prefWidth="120"/>
                            <TableColumn fx:id="ugDatumCol" text="Datum" prefWidth="120"/>
                            <TableColumn fx:id="ugNapomenaCol" text="Napomena" prefWidth="300"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- TAB: OBNOVE GODINE -->
            <Tab fx:id="obnoveTab" text="Obnove godine">
                <VBox spacing="10">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                    <TableView fx:id="obnoveTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="obSkolskaGodinaCol" text="Školska godina" prefWidth="150"/>
                            <TableColumn fx:id="obGodinaStudijaCol" text="Godina studija" prefWidth="120"/>
                            <TableColumn fx:id="obDatumCol" text="Datum" prefWidth="120"/>
                            <TableColumn fx:id="obNapomenaCol" text="Napomena" prefWidth="300"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- TAB: UPLATE -->
            <Tab fx:id="uplateTab" text="Uplate">
                <VBox spacing="10">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label fx:id="preostaloEURLabel" text="Preostalo EUR: 0.00" style="-fx-font-weight: bold;"/>
                        <Label fx:id="preostaloRSDLabel" text="Preostalo RSD: 0.00" style="-fx-font-weight: bold;"/>
                    </HBox>

                    <TableView fx:id="uplateTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="uplDatumCol" text="Datum" prefWidth="120"/>
                            <TableColumn fx:id="uplIznosEURCol" text="Iznos (EUR)" prefWidth="120"/>
                            <TableColumn fx:id="uplIznosRSDCol" text="Iznos (RSD)" prefWidth="120"/>
                            <TableColumn fx:id="uplKursCol" text="Kurs" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <!-- BOTTOM - AKCIONI DUGMIĆI -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="card">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

            <Button fx:id="upisGodineBtn" text="Upis godine" onAction="#handleUpisGodine" styleClass="primary-button"/>
            <Button fx:id="obnovaGodineBtn" text="Obnova godine" onAction="#handleObnovaGodine" styleClass="warning-button"/>
            <Button fx:id="dodajUplatuBtn" text="Dodaj uplatu" onAction="#handleDodajUplatu" styleClass="success-button"/>
            <Button fx:id="prijaviIspitBtn" text="Prijavi ispit" onAction="#handlePrijaviIspit" styleClass="primary-button"/>
            <Button fx:id="refreshBtn" text="Refresh" onAction="#handleRefresh"/>
            <Button fx:id="closeBtn" text="Zatvori" onAction="#handleClose" styleClass="danger-button"/>
        </HBox>
    </bottom>

</BorderPane>