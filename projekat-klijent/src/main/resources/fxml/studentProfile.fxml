<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.raflab.studsluzbadesktopclient.controllers.StudentProfileController"
            prefWidth="1000" prefHeight="700">

    <!-- HEADER -->
    <top>
        <VBox spacing="10" style="-fx-padding: 20;">
            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="Student:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="imeLabel" style="-fx-font-size: 18px;"/>
                    <Label fx:id="prezimeLabel" style="-fx-font-size: 18px;"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Indeks:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="indeksLabel" style="-fx-font-size: 16px;"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="JMBG:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="jmbgLabel"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Email:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="emailLabel"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Program:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="studProgramLabel"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="ESPB:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="espbLabel" style="-fx-font-size: 16px; -fx-text-fill: green;"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Prosek:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="prosekLabel" style="-fx-font-size: 16px; -fx-text-fill: blue;"/>
                </VBox>
            </HBox>

            <!-- AKCIONI DUGMIĆI -->
            <HBox spacing="10">
                <Button fx:id="upisGodineBtn" text="Upis Godine" onAction="#handleUpisGodine" styleClass="success-button"/>
                <Button fx:id="obnovaGodineBtn" text="Obnova Godine" onAction="#handleObnovaGodine" styleClass="warning-button"/>
                <Button fx:id="dodajUplatuBtn" text="Dodaj Uplatu" onAction="#handleDodajUplatu" styleClass="primary-button"/>
                <Button fx:id="refreshBtn" text="Osveži" onAction="#handleRefresh"/>
                <Button fx:id="closeBtn" text="Zatvori" onAction="#handleClose" styleClass="danger-button"/>
            </HBox>
        </VBox>
    </top>

    <!-- TAB PANE -->
    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">

            <!-- TAB: LIČNI PODACI -->
            <Tab fx:id="licniPodaciTab" text="Lični Podaci">
                <ScrollPane fitToWidth="true">
                    <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
                        <Label text="Ime:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="imeTf" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Prezime:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="prezimeTf" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Srednje ime:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="srednjeImeTf" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="JMBG:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="jmbgTf" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                        <Label text="Datum rođenja:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <DatePicker fx:id="datumRodjenjaDp" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                        <Label text="Mesto rođenja:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <TextField fx:id="mestoRodjenjaTf" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                        <Label text="Država rođenja:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                        <TextField fx:id="drzavaRodjenjaTf" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                        <Label text="Adresa:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                        <TextField fx:id="adresaTf" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                        <Label text="Telefon:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                        <TextField fx:id="telefonTf" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

                        <Label text="Email privatni:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
                        <TextField fx:id="emailPrivatniTf" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

                        <Label text="Email fakultetski:" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
                        <TextField fx:id="emailFakultetskiTf" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="10"/>

                        <Label text="Srednja škola:" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
                        <TextField fx:id="srednjaSkolaTf" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
                    </GridPane>
                </ScrollPane>
            </Tab>

            <!-- TAB: POLOŽENI ISPITI -->
            <Tab fx:id="polozeniTab" text="Položeni Ispiti">
                <TableView fx:id="polozeniTable">
                    <columns>
                        <TableColumn fx:id="polPredmetCol" text="Predmet" prefWidth="300"/>
                        <TableColumn fx:id="polOcenaCol" text="Ocena" prefWidth="80"/>
                        <TableColumn fx:id="polDatumCol" text="Datum" prefWidth="120"/>
                        <TableColumn fx:id="polEspbCol" text="ESPB" prefWidth="80"/>
                    </columns>
                </TableView>
            </Tab>

            <!-- TAB: NEPOLOŽENI ISPITI -->
            <Tab fx:id="nepolozeniTab" text="Nepoloženi Ispiti">
                <TableView fx:id="nepolozeniTable">
                    <columns>
                        <TableColumn fx:id="nepolPredmetCol" text="Predmet" prefWidth="300"/>
                        <TableColumn fx:id="nepolEspbCol" text="ESPB" prefWidth="80"/>
                        <TableColumn fx:id="nepolIzlasciCol" text="Broj izlazaka" prefWidth="120"/>
                    </columns>
                </TableView>
            </Tab>

            <!-- TAB: UPISANE GODINE -->
            <Tab fx:id="upisaneGodineTab" text="Upisane Godine">
                <TableView fx:id="upisaneGodineTable">
                    <columns>
                        <TableColumn fx:id="ugSkolskaGodinaCol" text="Školska Godina" prefWidth="150"/>
                        <TableColumn fx:id="ugGodinaStudijaCol" text="Godina Studija" prefWidth="120"/>
                        <TableColumn fx:id="ugNacinFinansiranjaCol" text="Finansiranje" prefWidth="150"/>
                        <TableColumn fx:id="ugIznosCol" text="Iznos (EUR)" prefWidth="100"/>
                        <TableColumn fx:id="ugUplacenoCol" text="Uplaćeno" prefWidth="100"/>
                        <TableColumn fx:id="ugPreostaloCol" text="Preostalo" prefWidth="100"/>
                    </columns>
                </TableView>
            </Tab>

            <!-- TAB: OBNOVE GODINE -->
            <Tab fx:id="obnoveTab" text="Obnove Godine">
                <TableView fx:id="obnoveTable">
                    <columns>
                        <TableColumn fx:id="obSkolskaGodinaCol" text="Školska Godina" prefWidth="150"/>
                        <TableColumn fx:id="obGodinaStudijaCol" text="Godina Studija" prefWidth="120"/>
                        <TableColumn fx:id="obDatumCol" text="Datum" prefWidth="120"/>
                        <TableColumn fx:id="obNapomenaCol" text="Napomena" prefWidth="300"/>
                    </columns>
                </TableView>
            </Tab>

            <!-- TAB: UPLATE -->
            <Tab fx:id="uplateTab" text="Uplate">
                <TableView fx:id="uplateTable">
                    <columns>
                        <TableColumn fx:id="uplDatumCol" text="Datum" prefWidth="120"/>
                        <TableColumn fx:id="uplIznosEURCol" text="Iznos (EUR)" prefWidth="120"/>
                        <TableColumn fx:id="uplIznosRSDCol" text="Iznos (RSD)" prefWidth="120"/>
                        <TableColumn fx:id="uplNapomenaCol" text="Napomena" prefWidth="300"/>
                    </columns>
                </TableView>
            </Tab>

        </TabPane>
    </center>

    <!-- STATUS BAR -->
    <bottom>
        <HBox style="-fx-padding: 5; -fx-background-color: #2c3e50;">
            <Label fx:id="statusLabel" text="Spremno" style="-fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>